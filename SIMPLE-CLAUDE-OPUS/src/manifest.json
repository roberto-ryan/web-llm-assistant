{
  "manifest_version": 3,
  "name": "Lightweight AI Assistant",
  "version": "0.1.0",
  "description": "Ultra-lightweight AI assistant for your browser",
  "icons": {
    "128": "icon.png"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Open AI Assistant"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["storage", "tabs", "activeTab", "sidePanel"],
  "host_permissions": ["<all_urls>"]
}